<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/friends_list_gradient"
    android:weightSum="5"
    tools:targetApi="11">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/selected_friends"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4"
        android:paddingTop="8dp"
        android:choiceMode="none"
        android:cacheColorHint="@color/transparent"
        android:clickable="false" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/create_group_popup_name_field"
        android:layout_gravity="center_horizontal"
        android:inputType="text"
        android:labelFor="@+id/create_group_popup_name_field"
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:background="@color/myWhite"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_weight=".5"
        android:text="@string/create_group_popup_name_field_string" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_weight=".5"
        android:paddingTop="12dp"
        android:id="@+id/create_group_popup_buttons_layout"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_group_popup_cancel_button_string"
            android:id="@+id/create_group_popup_cancel_button"
            android:layout_weight="2.19"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/myBlack"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_group_popup_create_button_string"
            android:id="@+id/create_group_popup_create_button"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1.55"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            style="?android:attr/buttonBarButtonStyle"
            android:textColor="@color/myBlack"/>
    </LinearLayout>
</LinearLayout>