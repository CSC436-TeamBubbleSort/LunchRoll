<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment"
    android:name="com.csc436.team_bubble_sort.lunchroll.TopResultActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/friends_list_gradient"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Latitude:"
            android:id="@+id/result_latitude_label"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     "
            android:id="@+id/result_latitude_value"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Longitude:"
            android:id="@+id/result_longitude_label"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     "
            android:id="@+id/result_longitude_value"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Icon URL:"
            android:id="@+id/result_icon_url_label"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     "
            android:id="@+id/result_icon_url_value"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.12">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Restaurant:"
            android:id="@+id/result_name_label"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     "
            android:id="@+id/result_name_value"
            android:layout_weight="0.15"
            android:textColor="@color/myBlack"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Price:"
            android:id="@+id/result_price_level_label"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="    "
            android:id="@+id/result_price_level_value"
            android:textColor="@color/myBlack"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Rating:"
            android:id="@+id/result_rating_label"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="    "
            android:id="@+id/result_rating_value"
            android:textColor="@color/myBlack"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Vicinity:"
            android:id="@+id/result_vicinity_label"
            android:textColor="@color/myBlack"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     "
            android:id="@+id/result_vicinity_value"
            android:textColor="@color/myBlack"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.13">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Open:"
            android:id="@+id/result_open_now_label"
            android:textColor="@color/myBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="     "
            android:id="@+id/result_open_now_value"
            android:textColor="@color/myBlack" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.06">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BACK"
            android:id="@+id/result_back_button"
            android:textColor="@color/myBlack"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="0.33"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MAP"
            android:id="@+id/result_map_button"
            android:textColor="@color/myBlack"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="0.34"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NEXT"
            android:id="@+id/result_next_button"
            android:textColor="@color/myBlack"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_weight="0.33"/>
    </LinearLayout>

</LinearLayout>
