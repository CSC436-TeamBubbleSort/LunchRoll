<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.csc436.team_bubble_sort.lunchroll" >

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.csc436.team_bubble_sort.lunchroll.LoginActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.csc436.team_bubble_sort.lunchroll.SetupActivity"
            android:label="@string/title_activity_setup" >
        </activity>
        <activity
            android:name="com.csc436.team_bubble_sort.lunchroll.GroupSelectActivity"
            android:label="@string/title_activity_group_select" >
        </activity>
        <activity
            android:name=".FriendsListActivity"
            android:label="@string/title_activity_friends_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.csc436.team_bubble_sort.lunchroll.TopResultActivity"
            android:label="@string/title_activity_top_result" >
        </activity>
    </application>

</manifest>
